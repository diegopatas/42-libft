CC		= gcc
CFLAGS	= -Wall -Wextra -Werror

OBJS	= main.o ft_sum.o

all:
	$(CC) $(CFLAGS) $(OBJS) -o program

# Here make is deducing the recipe like `cc -c main.c -o main.o`
main.o: lib.h
ft_sum.o: lib.h

clean:
	rm -rf &(OBJS) program

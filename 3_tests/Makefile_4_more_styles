CC		= gcc
CFLAGS	= -Wall -Wextra -Werror

OBJS	= main.o ft_sum.o

all:
	$(CC) $(CFLAGS) $(OBJS) -o program

$(OBJS): lib.h
ft_sum.o: lib.h

.PHONY: clean

clean:
	rm -rf $(OBJS) program

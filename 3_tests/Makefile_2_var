CC		= gcc
CFLAGS	= -Wall -Wextra -Werror

OBJS	= main.o ft_sum.o

all:
	$(CC) $(CFLAGS) $(OBJS) -o program

main.o: main.c lib.h
	$(CC) -c main.c

ft_sum.o: ft_sum.c lib.h
	$(CC) -c ft_sum.c

clean:
	rm -rf &(OBJS) program

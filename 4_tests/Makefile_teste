CC		= gcc -Wall -Wextra -Werror
SRC		= $(wildcard *.c)
OBJ		= $(SRC:%.c=%.o)
NAME	= libft.a
INCL	= ../1_modules

all: $(NAME)

$(NAME):
	ar -rc $@ $(OBJ)

.PHONY: all clean fclean re
clean: ; rm -rf $(OBJ)
fclean: clean; rm -rf $(NAME)
re: fclean all

test_atoi:
	$(CC) -o test_atoi.c -$@ -L$(INCL) -lft

test_isdigit:
	$(CC) test_isdigit.c -o $@ -L$(INCL) -lft

test_isalpha:
	$(CC) test_isalpha.c -o $@ -L$(INCL) -lft

test_isalnum:
	$(CC) test_isalnum -o $@ -L$(INCL) -lft

test_isascii:
	$(CC) test_isascii.c -o $@ -L$(INCL) -lft

test_isprint:
	$(CC) test_isprint.c -o $@ -L$(INCL) -lft

test_strlen:
	$(CC) test_strlen.c -o $@ -L$(INCL) -lft

test_memset:
	$(CC) test_memset.c -o $@ -L$(INCL) -lft

test_calloc:
	$(CC) test_calloc.c -o $@ -L$(INCL) -lft

test_memcpy:
	$(CC) test_memcpy.c -o $@ -L$(INCL) -lft

test_memchr:
	$(CC) test_memchr.c -o $@ -L$(INCL) -lft

test_strchr:
	$(CC) test_strchr.c -o $@ -L$(INCL) -lft

test_tolower:
	$(CC) test_tolower.c -o $@ -L$(INCL) -lft

test_toupper:
	$(CC) test_toupper.c -o $@ -L$(INCL) -lft

test_strrchr:
	$(CC) test_strrchr.c -o $@ -L$(INCL) -lft

test_memcmp:
	$(CC) test_memcmp.c -o $@ -L$(INCL) -lft

test_strdup:
	$(CC) test_strdup.c -o $@ -L$(INCL) -lft

test_strlcat:
	$(CC) test_strlcat.c -o $@ -L$(INCL) -lft

test_strncmp:
	$(CC) test_strncmp.c -o $@ -L$(INCL) -lft


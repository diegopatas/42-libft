CC		= gcc -Wall -Wextra -Werror
SRC		= $(wildcard *.c)
OBJ		= $(SRC:%.c=%.o)
NAME	= libft.a
INCL	= ../1_modules

all: $(NAME)

$(NAME):
	ar -rc $@ $(OBJ)

.PHONY: all clean fclean re
clean: ; rm -rf $(OBJ)
fclean: clean; rm -rf $(NAME)
re: fclean all

test_atoi:
	$(CC) -o $@ -L$(INCL) -lft test_atoi.c

test_isdigit:
	$(CC) -o $@ -L$(INCL) -lft test_isdigit.c

test_isalpha:
	$(CC) -o $@ -L$(INCL) -lft test_isalpha.c

test_isalnum:
	$(CC) -o $@ -L$(INCL) -lft test_isalnum.c

test_isascii:
	$(CC) test_isascii.c -o $@ -L$(INCL) -lft

test_isprint:
	$(CC) test_isprint.c -o $@ -L$(INCL) -lft

test_strlen:
	$(CC) test_strlen.c -o $@ -L$(INCL) -lft

test_memset:
	$(CC) test_memset.c -o $@ -L$(INCL) -lft

test_calloc:
	$(CC) test_calloc.c -o $@ -L$(INCL) -lft

test_memcpy:
	$(CC) test_memcpy.c -o $@ -L$(INCL) -lft

